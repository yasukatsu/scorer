<div class="game-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <%= form_for @game do |f| %>
        <h1 class="opponent">
          "vs."<%= f.text_field :name %>
        </h1>
          <div class="form-group">
            <%= f.label :score %>
            <%= f.file_field :score%>
          </div>

          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '保存', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
